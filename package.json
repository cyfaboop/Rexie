{
    "version": "0.0.1",
    "type": "module",
    "description": "3kB React-like for PixiJS: Sync/Concurrent rendering, full PixiJS API access",
    "files": [
        "dist"
    ],
    "main": "dist/rexie.umd.js",
    "unpkg": "dist/rexie.iife.js",
    "jsdelivr": "dist/rexie.iife.js",
    "module": "./dist/rexie.es.js",
    "exports": {
        ".": {
            "import": "./dist/rexie.es.js",
            "require": "./dist/rexie.umd.js"
        }
    },
    "types": "./dist/types/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wooloo26/rexie"
    },
    "keywords": [
        "react",
        "pixi"
    ],
    "author": "wooloo26",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/wooloo26/rexie/issues"
    },
    "homepage": "https://github.com/wooloo26/rexie#readme",
    "scripts": {
        "dev": "node scripts/dev.js",
        "build": "rimraf ./dist && pnpm eslint && node scripts/build.js",
        "check": "tsc --incremental --noEmit",
        "format": "prettier --write --cache .",
        "postinstall": "simple-git-hooks"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint-staged && pnpm check && pnpm eslint",
        "commit-msg": "node scripts/verify-commit.js"
    },
    "lint-staged": {
        "*.{js,json}": [
            "prettier --write"
        ],
        "*.ts?(x)": [
            "prettier --parser=typescript --write"
        ]
    },
    "engines": {
        "node": ">=22.13.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/node": "^22.13.10",
        "esbuild": "^0.25.1",
        "eslint": "^9.23.0",
        "eslint-plugin-react": "^7.37.4",
        "globals": "^16.0.0",
        "lint-staged": "^15.5.0",
        "lodash": "^4.17.21",
        "npm-run-all": "^4.1.5",
        "picocolors": "^1.1.1",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "simple-git-hooks": "^2.11.1",
        "typescript": "~5.7.3",
        "typescript-eslint": "^8.27.0"
    },
    "packageManager": "pnpm@10.2.1+sha512.398035c7bd696d0ba0b10a688ed558285329d27ea994804a52bad9167d8e3a72bcb993f9699585d3ca25779ac64949ef422757a6c31102c12ab932e5cbe5cc92",
    "dependencies": {
        "pixi.js": "^8.8.1"
    }
}
